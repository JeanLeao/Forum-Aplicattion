<%- include ('../partials/header.ejs'); %>
<body>
    <%- include ('../partials/navbar.ejs'); %>
    <div class="container">
        <hr>
        <h2>Artigos</h2>
        <a href="/admin/articles/new" class="btn btn-success">Criar Artigo</a>
        <hr>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>TITULO</th>
                    <th>SLUG</th>
                    <th>CATEGORY</th>
                    <th>ACÕES</th>
                </tr>
            </thead>
            <tbody>
            <% articles.forEach((article) => { %>
                <tr>
                    <td><%=article.id%></td>
                    <td><%=article.title%></td>
                    <td><%=article.slug%></td>
                    <td><%=article.category.title%></td>
                    <td>
                        <form action="/admin/articles/edit/<%=article.id%>" method="post" style="display: inline;">
                            <button class="btn btn-warning">Editar</button>
                        </form>
                        
                        <form action="/articles/delete/<%=article.id%>" method="post" style="display: inline;" onsubmit="confirmarDelete(event,this)">
                            <button class="btn btn-danger">Excluir</button>
                        </form>
                    </td>
                </tr>
                    <% }) %>
                </tbody>
        </table>
    </div>
</body>
<%- include ('../partials/footer.ejs'); %>
<script>
    function confirmarDelete(event,form){
        event.preventDefault();
        var decision = confirm('Você está prestes a deletar esse artigo tem certeza?');
        if(decision){
            form.submit();
        }

    }
</script>